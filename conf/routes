# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


# CRUD STUFF

POST   /api/auth/user          controllers.HomeController.authUser()

POST   /api/create/user      controllers.HomeController.createUser()

POST    /api/logout         controllers.HomeController.logout()

# POST    /reset          controllers.HomeController.reset()

PUT    /api/update/user/:user_id  controllers.HomeController.updateUser(user_id: String)

DELETE  /api/delete/user/:user_id        controllers.HomeController.deleteUser(user_id: String)

